---
import { Image } from "astro:assets";


interface Props {
    image: ImageMetadata;
    title: string;
    text: string;
    alt: string;
}

const {title, image, text} = Astro.props;
---

<div class="mb-14 text-center md:mb-0">
    <Image class='mx-auto mb-4 size-[60px]' 
    src={image} 
    alt="Access"/>

    <div>
        <h2 class="mb-2 text-xl font-700">{title}</h2>
        <p>
            {text}
        </p>
    </div>
</div>