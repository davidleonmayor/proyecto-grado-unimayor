generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model PERSONA {
  CARNET               String   @id
  NOMBRES              String
  APELLIDOS            String
  TIPO_DOC_IDENTIDAD   String
  NUM_DOC_IDENTIDAD    String   @unique
  EMAIL_INSTITUCIONAL  String   @unique
  TELEFONO             String?
  TIPO_VINCULACION     String // Estudiante / Docente / Externo
  AREA_ESPECIALIZACION String?
  FECHA_REGISTRO       DateTime @default(now())

  // Relaciones
  estudianteProgramas ESTUDIANTE_PROGRAMA[]
  rolesTG             ROL_PERSONA_TG[]
  seguimientos        SEGUIMIENTO_TG[]
  evaluaciones        EVALUACION_TG[]
}

model FACULTAD {
  ID_FACULTAD     Int    @id @default(autoincrement())
  NOMBRE_FACULTAD String
  CODIGO_FACULTAD String @unique

  programas PROGRAMA_ACADEMICO[]
}

model PROGRAMA_ACADEMICO {
  ID_PROGRAMA_ACADEMICO Int    @id @default(autoincrement())
  NOMBRE_PROGRAMA       String
  CODIGO_SNIES          String @unique
  ESTADO                String // Activo/Inactivo
  ID_FACULTAD           Int

  facultad    FACULTAD              @relation(fields: [ID_FACULTAD], references: [ID_FACULTAD])
  niveles     PROGRAMA_NIVEL[]
  estudiantes ESTUDIANTE_PROGRAMA[]
}

model NIVEL_FORMACION {
  ID_NIVEL_FORMACION Int     @id @default(autoincrement())
  NOMBRE_NIVEL       String
  DESCRIPCION        String?

  programas PROGRAMA_NIVEL[]
}

model PROGRAMA_NIVEL {
  ID_PROGRAMA_NIVEL     Int    @id @default(autoincrement())
  ID_PROGRAMA_ACADEMICO Int
  ID_NIVEL_FORMACION    Int
  ESTADO                String

  programa PROGRAMA_ACADEMICO @relation(fields: [ID_PROGRAMA_ACADEMICO], references: [ID_PROGRAMA_ACADEMICO])
  nivel    NIVEL_FORMACION    @relation(fields: [ID_NIVEL_FORMACION], references: [ID_NIVEL_FORMACION])
  opciones OPCION_GRADO[]
}

model OPCION_GRADO {
  ID_OPCION_GRADO     Int     @id @default(autoincrement())
  NOMBRE_OPCION_GRADO String
  DESCRIPCION_OPCION  String?
  ESTADO              String
  ID_PROGRAMA_NIVEL   Int

  programaNivel PROGRAMA_NIVEL  @relation(fields: [ID_PROGRAMA_NIVEL], references: [ID_PROGRAMA_NIVEL])
  trabajos      TRABAJO_GRADO[]
}

model ESTUDIANTE_PROGRAMA {
  CARNET                  String
  ID_PROGRAMA_ACADEMICO   Int
  PORC_CREDITOS_APROBADOS Int
  ESTADO_ACADEMICO        String
  FECHA_INGRESO           DateTime
  FECHA_EGRESO            DateTime?

  persona  PERSONA            @relation(fields: [CARNET], references: [CARNET])
  programa PROGRAMA_ACADEMICO @relation(fields: [ID_PROGRAMA_ACADEMICO], references: [ID_PROGRAMA_ACADEMICO])

  @@id([CARNET, ID_PROGRAMA_ACADEMICO])
}

model TRABAJO_GRADO {
  ID_TRABAJO_GRADO   Int       @id @default(autoincrement())
  TITULO_TRABAJO     String
  FECHA_INICIO       DateTime
  FECHA_FIN_ESTIMADA DateTime?
  RESUMEN            String?
  ESTADO             String
  ID_OPCION_GRADO    Int
  ID_ESTADO_ACTUAL   Int

  opcion       OPCION_GRADO          @relation(fields: [ID_OPCION_GRADO], references: [ID_OPCION_GRADO])
  estado       ESTADO_TG             @relation(fields: [ID_ESTADO_ACTUAL], references: [ID_ESTADO_TG])
  roles        ROL_PERSONA_TG[]
  seguimientos SEGUIMIENTO_TG[]
  evaluaciones EVALUACION_TG[]
  sustentacion SUSTENTACION?
  practica     PRACTICA_PROFESIONAL?
}

model TIPO_ROL {
  ID_TIPO_ROL Int     @id @default(autoincrement())
  NOMBRE_ROL  String
  DESCRIPCION String?

  roles ROL_PERSONA_TG[]
}

model ROL_PERSONA_TG {
  ID_ROL_PERSONA   Int       @id @default(autoincrement())
  CARNET           String
  ID_TRABAJO_GRADO Int
  ID_TIPO_ROL      Int
  FECHA_ASIGNACION DateTime
  FECHA_RETIRO     DateTime?
  ESTADO           String
  OBSERVACIONES    String?

  persona PERSONA       @relation(fields: [CARNET], references: [CARNET])
  trabajo TRABAJO_GRADO @relation(fields: [ID_TRABAJO_GRADO], references: [ID_TRABAJO_GRADO])
  rol     TIPO_ROL      @relation(fields: [ID_TIPO_ROL], references: [ID_TIPO_ROL])
}

model ESTADO_TG {
  ID_ESTADO_TG  Int     @id @default(autoincrement())
  NOMBRE_ESTADO String
  DESCRIPCION   String?
  ORDEN         Int

  trabajos        TRABAJO_GRADO[]
  seguimientosAnt SEGUIMIENTO_TG[] @relation("EstadoAnterior")
  seguimientosNvo SEGUIMIENTO_TG[] @relation("EstadoNuevo")
}

model SEGUIMIENTO_TG {
  ID_SEGUIMIENTO     Int       @id @default(autoincrement())
  ID_TRABAJO_GRADO   Int
  CARNET_ACTOR       String
  FECHA_REGISTRO     DateTime  @default(now())
  TIPO_ACCION        String
  DESCRIPCION        String?
  DETALLE            String?
  ID_ESTADO_ANTERIOR Int?
  ID_ESTADO_NUEVO    Int?
  NUMERO_OFICIO      String?
  FECHA_OFICIO       DateTime?
  NOMBRE_DOCUMENTO   String?
  TIPO_DOCUMENTO     String?
  ARCHIVO            Bytes?
  RUTA_ARCHIVO       String?

  trabajo        TRABAJO_GRADO @relation(fields: [ID_TRABAJO_GRADO], references: [ID_TRABAJO_GRADO])
  actor          PERSONA       @relation(fields: [CARNET_ACTOR], references: [CARNET])
  estadoAnterior ESTADO_TG?    @relation("EstadoAnterior", fields: [ID_ESTADO_ANTERIOR], references: [ID_ESTADO_TG])
  estadoNuevo    ESTADO_TG?    @relation("EstadoNuevo", fields: [ID_ESTADO_NUEVO], references: [ID_ESTADO_TG])
}

model EMPRESA {
  ID_EMPRESA     Int    @id @default(autoincrement())
  NIT_EMPRESA    String @unique
  NOMBRE_EMPRESA String
  DIRECCION      String
  TELEFONO       String
  EMAIL_CONTACTO String
  ESTADO         String

  practicas PRACTICA_PROFESIONAL[]
}

model PRACTICA_PROFESIONAL {
  ID_TRABAJO_GRADO      Int       @id
  ID_EMPRESA            Int
  NOMBRE_SUPERVISOR     String
  CARGO_SUPERVISOR      String
  FECHA_INICIO          DateTime
  FECHA_FIN             DateTime?
  NUMERO_CONSTANCIA_ARL String?
  ESTADO_PRACTICA       String

  trabajo TRABAJO_GRADO @relation(fields: [ID_TRABAJO_GRADO], references: [ID_TRABAJO_GRADO])
  empresa EMPRESA       @relation(fields: [ID_EMPRESA], references: [ID_EMPRESA])
}

model EVALUACION_TG {
  ID_EVALUACION    Int      @id @default(autoincrement())
  ID_TRABAJO_GRADO Int
  CARNET_EVALUADOR String
  TIPO_EVALUACION  String
  FECHA_EVALUACION DateTime
  CALIFICACION     Int
  OBSERVACIONES    String?
  CONCEPTO         String?

  trabajo   TRABAJO_GRADO @relation(fields: [ID_TRABAJO_GRADO], references: [ID_TRABAJO_GRADO])
  evaluador PERSONA       @relation(fields: [CARNET_EVALUADOR], references: [CARNET])
}

model SUSTENTACION {
  ID_SUSTENTACION    Int       @id @default(autoincrement())
  ID_TRABAJO_GRADO   Int       @unique
  FECHA_SUSTENTACION DateTime
  LUGAR              String
  CALIFICACION_FINAL Int
  DISTINCION         String
  NUMERO_RESOLUCION  String?
  FECHA_RESOLUCION   DateTime?

  trabajo TRABAJO_GRADO @relation(fields: [ID_TRABAJO_GRADO], references: [ID_TRABAJO_GRADO])
}
