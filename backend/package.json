    "packageManager": "pnpm@10.15.0",
    "scripts": {
        "dev": "dotenv -e .env.local -- nodemon src/index.ts",
        "db:generate": "prisma generate --schema=./prisma/schema.prisma",
        "db:migrate": "prisma migrate dev --name init",
        "db:studio": "prisma studio",
        "db:seed": "ts-node prisma/seed.ts",
        "db:clear": "ts-node prisma/clear.ts",
        "db:fix": "ts-node prisma/fix-data.ts",
        "test": "dotenv -e .env.test -- pnpm db:generate && dotenv -e .env.test -- jest",
        "test:coverage": "npm run pretest && jest --coverage"
    },
    "engines": {
        "node": ">=22.18.0",
        "pnpm": ">=10.6.5"
    },
