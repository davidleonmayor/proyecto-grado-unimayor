{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": [
      "ESNext"
    ],
    "target": "ESNext",
    "types": [
      "node",
      "jest"
    ],
    "moduleResolution": "nodenext",
    "isolatedModules": true,
    "module": "NodeNext",
    "strict": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "routes/**/*.ts",
    "**/*.test.ts"
  ]
}